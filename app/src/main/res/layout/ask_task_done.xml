<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:id="@+id/btnNo"
        android:background="@drawable/ic_clear_24dp"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:id="@+id/btnYes"
        android:background="@drawable/ic_done_all_24dp"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/btnNo"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/etUName"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:text="Abid786"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating"
        android:id="@+id/tvRating"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/etUName"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etReview"
        android:gravity="right"
        android:layout_alignTop="@+id/tvRating"
        android:text="4.5"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/tvRating"
        android:layout_alignEnd="@+id/tvRating" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/tvAddress"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvRating"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etAddress"
        android:gravity="right"
        android:textAlignment="center"
        android:text="House no 12, Street no 2, Chung Multan Road Lahore"
        android:textSize="20dp"
        android:layout_alignTop="@+id/tvAddress"
        android:layout_toRightOf="@+id/btnNo"
        android:layout_alignRight="@+id/btnYes"
        android:layout_alignEnd="@+id/btnYes" />


</RelativeLayout>