<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/three_buttons_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeButtonsActivity">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView" />-->

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Profile"
                    android:textSize="30dp"
                    android:id="@+id/tvProfile"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="50dp"  />


                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:id="@+id/btnEdit"
                    android:background="@drawable/ic_mode_edit_24dp"
                    android:layout_gravity="right"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/tvProfile"
                    android:layout_alignEnd="@+id/tvProfile" />

            </RelativeLayout>


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvUName"
                android:drawableLeft="@drawable/ic_person_outline_24dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Abdul Maroof"
                android:textSize="20dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvFName"
                android:drawableLeft="@drawable/ic_person_24dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="Abdul786"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Personal Information"
                android:id="@+id/tvReg"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"  />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvCNIC"
                android:drawableLeft="@drawable/cnic"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="35202 1867864 4"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPhoneNo"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_phone_24dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="0333 4404475"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/tvEmail"
                android:drawableLeft="@drawable/email_icon_3"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="abdulmaroof7@gmail.com"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/tvAddress"
                android:drawableLeft="@drawable/ic_place_24dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="House no 12, Street no 2, Chung Multan Road Lahore"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/tvShop"
                android:drawableLeft="@drawable/shop_icon"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="Haider Electronics"
                android:textSize="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>